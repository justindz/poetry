<%= render :partial => 'header', :locals => { :chapbook => @chapbook } %>
<h1>Introduction</h1>
<p>
  <%= @chapbook.introduction %>
</p>
<h2 style="margin-top: 3em;"><%= link_to("Start reading...", page_path(:chapbook_id => @chapbook, :sequence => 1)) unless @chapbook.pages.empty? %></h2>
<p style="margin-top: 5em;">
  <%= render :partial => 'poems/tag_list', :locals => { :taggable => @chapbook } -%>
  <% if logged_in? -%>
    <% form_remote_tag(:url => { :action => 'tag' }) do -%>
      <%= text_field :chapbook, :tags, :value => "", :size => "12" %>
      <%= hidden_field :chapbook, :id %>
      <%= submit_tag 'Add Tags' %>
    <% end -%>
  <% end -%>
</p>
<%= render :partial => 'header', :locals => { :chapbook => @chapbook } %>