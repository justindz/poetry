<% for chapbook in @chapbooks -%>
  <div class="poem">
    <h1><%= image_tag('chapbook_icon_128x128.png', :style => 'vertical-align: middle') %> <%= link_to(chapbook.title, chapbook_path(chapbook)) %></h1>
    <p>Edited by <%= link_to_user(chapbook.user.name, chapbook.user.id) %> <%= mini_avatar(chapbook.user) %>, featuring <strong><%= pluralize(chapbook.poems.size, 'poem') %></strong>, published <%= chapbook.created_at.to_s(:long) %></p>
    <p><%= truncate chapbook.introduction_plain, 100, link_to(" [more]", chapbook_path(chapbook)) %></p>
    <hr />
  </div>
<% end -%>
<%= will_paginate @chapbooks %>