<% @rss = auto_discovery_link_tag(:rss, formatted_favorites_url(@user, :rss), { :title => "Favorite Poems of #{@user.name} on Chapbook" }) %>
<% @page_title = "#{@user.name} Favorite Poems @ Chapbook" %>
<% if @favorites.empty? -%>
    <h2>You don't have any favorites.  Why don't you <%= link_to('go find some?', poems_path()) %></a>
<% else -%>
  <h2>Your Favorite Poems</h2>
  <% @favorites.each do |f| -%>
    <p><%= link_to(f.poem.title, poem_path(f.poem)) %></p>
  <% end -%>
<% end -%>